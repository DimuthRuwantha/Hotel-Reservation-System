                    @Html.ValidationMessageFor(model => model.Tv, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="col s4">
                @*@Html.LabelFor(model => model.No_of_Guests, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <p class="col s6">Card Type</p>
                <div class="col s6">
                    <input placeholder="Placeholder" id="first_name" type="text" class="validate">
                    @*@Html.EditorFor(model => model.Wifi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Wifi, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="col s4">
                @*@Html.LabelFor(model => model.No_of_Guests, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <p class="col s6">Expire on</p>
                <div class="col s6">
                    <input placeholder="Placeholder" id="first_name" type="text" class="validate">
                    @*@Html.EditorFor(model => model.No_of_Guests, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.No_of_Guests, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="col s4">
                @*@Html.LabelFor(model => model.Reserved, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <p class="col s6">Price per person</p>
                <div class="col s6">
                    <input placeholder="Placeholder" id="first_name" type="text" class="validate">
                    @*@Html.EditorFor(model => model.PricePerPerson, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PricePerPerson, "", new { @class = "text-danger" })*@
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s4">
                <input type="submit" value="Pay" class="btn btn-default" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Back to List", "ClassDetails")
        </div>
    }
</div>


