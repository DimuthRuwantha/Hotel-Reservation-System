@model HotelReservationSystem.Models.Room

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}


<div class="container">
    @using (Html.BeginForm("Payment", "User"))
    {
        @Html.AntiForgeryToken()
     //   string userid = Session["User_ID"].ToString();

        <h3>Payment type</h3>
        <h6>Total cost for the reservation Rs.@ViewBag.Price</h6>
        <hr />
        <div class="row">
            @Html.ValidationSummary(true, "", new { @class = "teal" })
            <div class="col s4">
                @*@Html.LabelFor(model => model.RoomNo, htmlAttributes: new { @class = "col s3" })*@
                <p class="col s6">Card No</p>
                <div class="col s6">
                   @Html.EditorFor(model => model.View, new { htmlAttributes = new { @class = "form-control" } })
                     @Html.ValidationMessageFor(model => model.ClassType, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col s4">
                @*@Html.LabelFor(model => model.ClassType, htmlAttributes: new { @class = "control-label col s3" })*@
